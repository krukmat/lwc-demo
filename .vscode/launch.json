{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug Jest Tests",
          "type": "node",
          "request": "launch",
          "env": { "NODE_ENV": "test" },
          "cwd": "${workspaceRoot}",
          "program": "${workspaceRoot}/node_modules/.bin/lwc-jest",
          "stopOnEntry": false,
          "runtimeArgs": ["--nolazy"],
          "console": "internalConsole",
          "sourceMaps": false,
          "internalConsoleOptions": "openOnSessionStart"
      }
  ]
}